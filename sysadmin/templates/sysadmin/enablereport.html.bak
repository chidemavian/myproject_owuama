{% extends "sysadmin/base.htm" %}
{%block head %}
    {%block title %}{%endblock%}
{%endblock %}
{%block content%}
    <!-- <div align ="center" style = "width:100%;heigth:10%;background:black;color:white;font-size:18px"> CONTROL PANEL</div>-->
    <div >

        <a href="/sysadmin/term-status/"><i class="fa fa-edit fa-fw"></i>Change Term Status</a>
        <div  style="background-color:#ccccc0;border:0px solid black;width:100%;height:25px; font-size:14px;color:black;text-align:center;padding-top:5px;"> SET REPORTSHEET PREFERENCES  </div>
        <div  style="color:red;font-family:verdana;font-size:13px;text-decoration:blink;background-color:#ffffff;text-align:center;" > {{varerr}}</div>
       <table width="100%" class="table  table-bordered table-hover" id="dataTables-example">
            <tr>
                <td colspan="10">

                    <form action="" method="post" name ="main" onsubmit="disable(this)">
                      <table width="100%" class="table  table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <td style='font-weight:bold'>Report Type :</td>
                                <td>{{ form.report}}</td>
                                <td style='font-weight:bold'> Status :</td>
                                <td>{{ form.status}}</td>

                                <td>

                                    <input name="submit" type= "submit" value="Change Status">
                                </td>
                            </tr>
                        </table>
                    </form>
                </td></tr>

            <tr>
                <td colspan="10">
                 {% if getdetails %}

                    <table width="100%" class="table  table-bordered table-hover" id="dataTables-example">
                    <div style="background-color:#ccccc0;border:0px solid black;width:100%;height:25px; font-size:14px;color:black;text-align:center;padding-top:5px;"> REPORTSHEET STATUS </div>
                        <tr style='text-align:center'>
                            <td ><strong>S/N</strong></td>
                            <td ><strong>Reportsheet </strong></td>
                            <td ><strong>Status</strong></td>
                        </tr>
                        {% for pincode in getdetails %}

                            <tr style='text-align:center'>

                            <td >  {{ forloop.counter }} </td>
                            <td >  {{ pincode.reportsheet }}</td>
                            <td > {{ pincode.status }} </td>

                        {% endfor %}
                        </tr>
                    </table>

                {% endif %}
                </td>
            </tr>
        </table>
    </div>

    <script language="javascript" type="text/javascript">
        function disable(f)
        {
            var button = f.elements['submit'];
            button.value = 'Processing';
            button.disabled = 'true';
            return true;
        }
    </script>



{%endblock%}
