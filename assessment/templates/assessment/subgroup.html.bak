<script type="text/javascript" language="javascript">
        function getcf(){
            var state =  ('{{ getstu.admissionno }}') + ':'+ $("#id_term").val();;
            // alert(state);
            var url = "/assessment/stucourseform/";
            var i = 0;
            var data='userid='+state;
            $.ajax({
                type:"POST",
                url:url,
                data:data,
                success:function(html) {
                    // $(".box2").show();
                    $(".box2").html(html);
                }
            });
            return false;
        }
