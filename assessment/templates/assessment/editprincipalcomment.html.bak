<html>
<head>
    <title>SchApp v7.0 {% block title %}{% endblock %}</title>
    <meta http-equiv="content-type" content="text/html; charset=ISO-8859-1">
    <style type="text/css">
        .error1 { color: red; }
        .submit { margin-left: 125px; margin-top: 10px;}
    </style>
    <script language="javascript" type="text/javascript">
        function disable(f)
        {
            var button = f.elements['submit'];
            button.value = 'Processing';
            button.disabled = 'true';
            return true;
        }
    </script>
</head>
<body>
<form action="/assessment/editcommentprin/{{ getdetails.id }}/" method="post"  onsubmit="disable(this)">
    <table style="width:100%;background-color:#f5f5f5;">

        <tr style="width:100%;">
            <td colspan="15">
                <table style="width:100%;">
                    <tr>
                        <td colspan="5" style="font-weight:bold;color:#000000;background-color:#808080;text-align:center">
                            Press ESC to close this box
                        </td>
                    </tr>
                    <tr>
                        <td style="color:blue;">
                            Adm. No
                        </td>
                        <td>
                            {{ getdetails.student.admissionno }}
                        </td>


                    </tr>
                    <tr>
                        <td style="color:blue;">
                            Student Name
                        </td>
                        <td  colspan="5">
                            {{ getdetails.student.fullname }}
                        </td>

                    </tr>
                    <tr>
                        <td style="color:blue;">
                            Session
                        </td>
                        <td>
                            {{ getdetails.student.admitted_session}}
                        </td>
                        <td rowspan="4">
                            <img src="/static/{{ getdetails.student.studentpicture  }}/" alt="" width="100px" height="80px">
                        </td>

                    </tr>
                    <tr>

                        <td style="color:blue;">
                            Term
                        </td>
                        <td>
                            {{getdetails.term}}
                        </td>
                        <td></td>

                    </tr>
                    <tr>

                        <td style="color:blue;">
                            Class
                        </td>
                        <td>
                            {{getdetails.klass}}
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td style="color:blue;">
                            Arm
                        </td>
                        <td>
                            {{getdetails.arm}}
                        </td>
                        <td></td>
                    </tr>

                    <tr>
                        <td style="color:blue;">
                            Principal's Comment
                        </td>
                        <td>

                            <textarea id="class_teacher_comment" rows="10" cols="30" name="class_teacher_comment">{{ getdetails.principal_comment }}</textarea>
                        </td>
                        <td><span class="error1">Your Comment Can Not Be Empty</span></td>
                    </tr>

                    <tr>
                        <td colspan="3" style="text-align:center;"><input type="submit" value=":: Submit Your Comment ::" name="submit"></td>
                    </tr>
                </table>

            </td>

        </tr>
    </table>

</form>
<script type="text/javascript">
    $(document).ready(function() {
        $('.error1').hide();
        $('.submit').click(function(event){
            var data1=$("#class_teacher_comment").val();
            var len1=data1.length;
            //alert(len);
            if (len1 > 0){
                $('.error1').hide();

            }
            else
            {
                //alert('Your Comment Cannot be Empty');
                $("#class_teacher_comment").focus();
                $('.error1').show();
                event.preventDefault();
            }

        });
    });
</script>
<script type="text/javascript" >
    $(document).ready(function() {
        $("#class_teacher_comment").keyup(function () {
            $('.error1').hide();
        });

    });
</script>
</body>
</html>
