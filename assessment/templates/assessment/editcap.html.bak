<script type="text/javascript">
    $(document).ready(function() {
        $('.error').hide();
        $('.submit').click(function(event){
            var data=$("#exam").val();
            var len=data.length;
            if (len <= 0){
                alert('Exam Score can not be Empty');
                //$('.error').show();
                $("#exam").focus();
                //$('.error').show();
                event.preventDefault();
            }
            else
            {
                $('.error').hide();
            }
            //*********************************************************
            if (jQuery.isNumeric(data) == true){

            }
